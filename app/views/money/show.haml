.col-xs-offset-3
  .container
    .row
      .col-xs-2
        = link_to 'Back', money_index_path, class: 'btn btn-danger btn-lg' 
    %br
    .row
      .col-xs-6
        %table.table.table-striped.table-bordered.table-hover.currencies
          %thead
            %tr
              %th.col-xs-2
                Currency
              %th.col-xs-1
                Converter
              %th.col-xs-1
                Code
              %th.col-xs-1
                Buy price
              %th.col-xs-1
                Sell price
              %th.col-xs-1
                Actions
          %tbody
            - if @currencies.present?
              - @currencies.each do |currency|
                %tr
                  %td= currency.name
                  %td= currency.converter
                  %td= currency.code
                  %td= currency.buy_price
                  %td= currency.sell_price
                  %td= link_to 'Report', report_money_path(currency), class: 'btn btn-success'